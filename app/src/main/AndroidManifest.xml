<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.smartclassroom">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_applogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_applogo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartClassRoom"
        android:usesCleartextTraffic="true">
        <activity android:name="com.app.smartclassroom.ui.walkthrough.Walkthrough"
            android:theme="@style/Theme.Walk"
            ></activity>
        <activity android:name="com.app.smartclassroom.ui.QuizResult" />
        <activity android:name="com.app.smartclassroom.ui.StartQuiz"></activity>
        <activity android:name="com.app.smartclassroom.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.app.smartclassroom.ui.Viewnotes" />
        <activity android:name="com.app.smartclassroom.ui.AddAssignment"></activity>
        <activity android:name="com.app.smartclassroom.ui.Login" />
        <activity android:name="com.app.smartclassroom.ui.Register" />
        <activity android:name="com.app.smartclassroom.ui.StudentHome" />
        <activity android:name="com.app.smartclassroom.ui.QuizActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <receiver
            android:name="com.app.smartclassroom.ui.timer.TimerExpiredReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name="com.app.smartclassroom.ui.timer.TimerNotificationActionReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="stop" />
                <action android:name="pause" />
                <action android:name="resume" />
                <action android:name="start" />
            </intent-filter>
        </receiver>
    </application>

</manifest>